<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="399dp"
        android:layout_height="550dp"
        android:layout_margin="16dp"
        android:background="#DED6D6"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.08">

        <Button
            android:id="@+id/ac_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#503131FF"
            android:text="AC"
            android:textColorLink="#211F1F"
            android:textSize="30dp" />

        <Button
            android:id="@+id/parentheses_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#503131FF"
            android:text="()"
            android:textColorLink="#211F1F"
            android:textSize="30dp" />

        <Button
            android:id="@+id/pie_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#503131FF"
            android:text="π"
            android:textColorLink="#211F1F"
            android:textSize="30dp" />

        <Button
            android:id="@+id/percent_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#503131FF"
            android:text="%"
            android:textColorLink="#211F1F"
            android:textSize="30dp" />

        <Button
            android:id="@+id/root_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#503131FF"
            android:text="√"
            android:textColorLink="#211F1F"
            android:textSize="30dp" />

        <Button
            android:id="@+id/exponentiation_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#503131FF"
            android:text="^"
            android:textColorLink="#211F1F"
            android:textSize="30dp" />

        <Button
            android:id="@+id/factorial_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#503131FF"
            android:text="!"
            android:textColorLink="#211F1F"
            android:textSize="30dp" />

        <Button
            android:id="@+id/division_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#211F1F"
            android:text="÷"
            android:textColorLink="#211F1F"
            android:textSize="30dp" />

        <Button
            android:id="@+id/nine_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="9"
            android:textSize="30dp" />

        <Button
            android:id="@+id/eight_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="8"
            android:textSize="30dp" />

        <Button
            android:id="@+id/seven_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="7"
            android:textSize="30dp" />

        <Button
            android:id="@+id/multiplication_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#211F1F"
            android:text="×"
            android:textColorLink="#211F1F"
            android:textSize="30dp" />

        <Button
            android:id="@+id/six_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="6"
            android:textSize="30dp" />

        <Button
            android:id="@+id/five_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="5"
            android:textSize="30dp" />

        <Button
            android:id="@+id/four_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="4"
            android:textSize="30dp" />

        <Button
            android:id="@+id/plus_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#211F1F"
            android:text="+"
            android:textColorLink="#211F1F"
            android:textSize="30dp" />

        <Button
            android:id="@+id/there_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="3"
            android:textSize="30dp" />

        <Button
            android:id="@+id/two_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/one_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="1"
            android:textSize="30dp" />

        <Button
            android:id="@+id/minus_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#211F1F"
            android:text="-"
            android:textSize="30dp" />

        <Button
            android:id="@+id/zero_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="0"
            android:textSize="30dp" />

        <Button
            android:id="@+id/decimal_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#664FA3"
            android:text="."
            android:textColorLink="#211F1F"
            android:textSize="30dp" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="⌦"
            android:textSize="30dp" />


        <Button
            android:id="@+id/equal_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#211F1F"
            android:text="="
            android:textSize="30dp" />

    </GridLayout>

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="398dp"
        android:layout_height="104dp"
        android:ems="10"
        android:inputType="none"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="71dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="56dp"
        android:layout_height="60dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_more_vert_24"
        tools:layout_editor_absoluteY="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>